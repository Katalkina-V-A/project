.page-header
  %h3 Жильцы
-if @current_user.try(:is_admin?) || @current_user.try(:is_commandant?)
  .btn-toolbar
    =link_to new_person_path, class: 'btn btn-primary' do
      =fa_icon 'plus'
      Добавить
= form_tag(tenants_path, :method => "get") do
  .form-group
    .input-group
      = text_field_tag :search, params[:search], placeholder: "Поиск", class: 'form-control'
      .input-group-btn
        = submit_tag 'Поиск', class: 'btn btn-primary'
.row
  .col-md-12
    .pull-right
      =link_to nil, class: 'btn btn-primary', style: "font-size: 12px; margin-top: -5px;" do
        =fa_icon 'search'
        Расширенный поиск
-if @tenants.blank?
  .alert.alert-info Проживающие не найдены
-else
  %ul.nav.pagination
    -Tenant.includes(resident: [:person]).map{|t| t.resident.person.lastname[0]}.uniq.sort.each do |i|
      %li
        =link_to i[0], tenants_path(char: i[0]) , data: {method: :get}
        -# countrysearch_index_path(search: i[0])
  .list-group
    -@tenants.each do |char, tenant_array|
      -tenant_array.each do |tenant|
        .list-group-item{class: tenant.checkoutdate<Date.today ? "list-group-item-danger" : (tenant.checkoutdate-Date.today<=3 ? "list-group-item-warning" : nil)}
          =link_to tenant.resident.person do
            .media
              -if tenant.avatar?
                .media-left=image_tag tenant.avatar.url(:thumb), alt: tenant.user.email, class: 'media-object'
              .media-body
                %h5.media-heading
                  =tenant.resident.person.lastname
                  =tenant.resident.person.firstname
                  =tenant.resident.person.secondname
                %span.text-muted
                  %i=tenant.check_date_move
              .media-right{style: "vertical-align: middle;"}
                .list-label.primary
                  = tenant.check_resident_type
                  -if tenant.historymoves.any?
                    =tenant.historymoves.last.room.numb
                .clearfix
                .list-label.primary
                  =tenant.resident_id
                .clearfix
