= form_for @person do |fp|
  = error_messages_for @person
  .row
    .col-md-4
      .form-group
        = fp.label :lastname
        = fp.text_field :lastname, class: 'form-control'
    .col-md-4
      .form-group
        = fp.label :firstname
        = fp.text_field :firstname, class: 'form-control'
    .col-md-4
      .form-group
        = fp.label :secondname
        = fp.text_field :secondname, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = fp.label :birthday
        = fp.text_field :birthday, class: 'form-control', data: {masked: 'date'}
    .col-md-4
      .form-group
        = fp.label :sex
        = fp.select :sex, [['','']] + Person::SEXES, {}, class: 'form-control'
  = fp.fields_for :student do |s|
    .row
      .col-md-6
        .form-group
          =s.label :faculty
          =s.select :faculty, [['','']] + Student::FACULTIES, {}, class: 'form-control'
      .col-md-6
        .form-group
          =s.label :chair
          =s.text_field :chair, class: 'form-control'
    .row
      .col-md-4
        .form-group
          =s.label :typegroup
          =s.text_field :typegroup, class: 'form-control'
      .col-md-4
        .form-group
          =s.label :course
          =s.text_field :course, class: 'form-control'
      .col-md-4
        .form-group
          =s.label :group
          =s.text_field :group, class: 'form-control'
    .row
      .col-md-6
        .form-group
          = s.label :receiptdate
          .input-group.date.datepicker
            = s.text_field :receiptdate, class: 'form-control'
            %span.input-group-addon
              %span.glyphicon.glyphicon-calendar
      .col-md-6
        .form-group
          = s.label :expirationdate
          .input-group.date.datepicker
            = s.text_field :expirationdate, class: 'form-control'
            %span.input-group-addon
              %span.glyphicon.glyphicon-calendar
    = s.fields_for :tenant do |f|
      .row
        .col-md-6
          .form-group
            = f.label :security
            = f.check_box :security, class: 'checkbox'
      .row
        .col-md-6
          .form-group
            = f.label :phone
            = f.text_field :phone, class: 'form-control'
      .row
        .col-md-6
          .form-group
            = f.label :arrivaldate
            .input-group.date.datepicker
              = f.text_field :arrivaldate, class: 'form-control'
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
        .col-md-6
          .form-group
            = f.label :checkoutdate
            .input-group.date.datepicker
              = f.text_field :checkoutdate, class: 'form-control'
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar`
      .row
        .col-md-12
          .form-group
            = f.label :note
            = f.text_area :note, class: 'form-control'

  .form-actions
    = fp.submit 'Save', class: 'btn btn-primary'
