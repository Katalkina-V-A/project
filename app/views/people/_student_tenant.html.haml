= form_for @person do |fp|
  = error_messages_for @person
  =hidden_field_tag :formname, :edit
  .row
    .col-md-4
      .form-group
        = fp.label :lastname
        = fp.text_field :lastname, class: 'form-control'
    .col-md-4
      .form-group
        = fp.label :firstname
        = fp.text_field :firstname, class: 'form-control'
    .col-md-4
      .form-group
        = fp.label :secondname
        = fp.text_field :secondname, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = fp.label :birthday
        = fp.text_field :birthday, class: 'form-control', data: {masked: 'date'}, value: (l(@person.birthday) if @person.birthday)
    .col-md-4
      .form-inline
        .form-group
          = fp.label :sex
          = fp.radio_button(:sex, "М")
          Мужской
          = fp.radio_button(:sex, "Ж")
          Женский
  = fp.fields_for :student do |s|
    .row
      .col-md-6
        .form-group
          =s.label :faculty
          =s.select :faculty,options_for_select(Student::FACULTIES), {}, title: "Ничего не выбрано", class: 'form-control selectpicker',
            data: {value: (tmp = params.try('[]', :person).try('[]', :student).try('[]', :faculty)).nil? ? s.object.faculty : tmp}
      .col-md-6
        .form-group
          =s.label :chair
          =s.text_field :chair, class: 'form-control'
    .row
      .col-md-4
        .form-group
          =s.label :typegroup
          =s.select :typegroup,options_for_select(Student::TYPEGROUPS), {}, title: "Ничего не выбрано", class: 'form-control selectpicker',
            data: {value: (tm = params.try('[]', :person).try('[]', :student).try('[]', :typegroup)).nil? ? s.object.typegroup : tm}
      .col-md-4
        .form-group
          =s.label :course
          =s.text_field :course, class: 'form-control'
      .col-md-4
        .form-group
          =s.label :group
          =s.text_field :group, class: 'form-control'
    .row
      .col-md-6
        .form-group
          = s.label :receiptdate
          .input-group.date.datepicker
            = s.text_field :receiptdate, class: 'form-control'
            %span.input-group-addon
              %span.glyphicon.glyphicon-calendar
      .col-md-6
        .form-group
          = s.label :expirationdate
          .input-group.date.datepicker
            = s.text_field :expirationdate, class: 'form-control'
            %span.input-group-addon
              %span.glyphicon.glyphicon-calendar
    = s.fields_for :tenant do |f|
      .row
        .col-md-6
          .form-group
            =f.label :avatar
            =f.file_field :avatar
      =f.fields_for :user do |u|
        .row
          .col-md-12
            .form-group
              = u.label :email
              = u.text_field :email, class: 'form-control'
              = u.error_messages_for(:email)
        =u.hidden_field :activation_state, value: "active"
        =u.hidden_field :role, value: 0
        =u.hidden_field :password, value: "12345"
        =u.hidden_field :password_confirmation, value: "12345"
      .row
        .col-md-6
          .form-group
            = f.label :security
            = f.check_box :security, class: 'checkbox'
      .row
        .col-md-6
          .form-group
            = f.label :phone
            = f.text_field :phone, class: 'form-control'
      .row
        .col-md-6
          .form-group
            = f.label :arrivaldate
            .input-group.date.datepicker
              = f.text_field :arrivaldate, class: 'form-control', value: (l(@person.student.tenant.arrivaldate) if @person.student.tenant.arrivaldate)
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
        .col-md-6
          .form-group
            = f.label :checkoutdate
            .input-group.date.datepicker
              = f.text_field :checkoutdate, class: 'form-control'
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
      .row
        .col-md-12
          .form-group
            = f.label :note
            = f.text_area :note, class: 'form-control'

  .form-actions
    = fp.submit nil, class: 'btn btn-primary'
