= form_for @room do |f|
  =error_messages_for @room
  =hidden_field_tag :formname, :edit
  .row
    .col-md-8
      .form-group
        = f.label :building_id
        = f.select :building_id, Building.ordering.map{|b| [b.name, b.id]}, {}, class: 'form-control'
  .row
    .col-md-2
      .form-group
        = f.label :numb
        = f.text_field :numb, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :floor
        = f.text_field :floor, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :section
        = f.text_field :section, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :place
        = f.text_field :place, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :typeroom
        = f.select :typeroom,[['','']] + Room::TYPEROOMS,{}, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :state
        = f.select :state,[['','']] + Room::STATES, {}, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :accessory
        = f.select :accessory,[['','']] + Room::ACCESSORIES, {}, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :accessoryfaculty
        = f.select :accessoryfaculty,[['','']] + Room::ACCESSORYFACULTIES, {}, class: 'form-control'
  .row
    .col-md-2
      .form-group
        = f.label :fire
        = f.check_box :fire, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :signal
        = f.check_box :signal, class: 'form-control'
    .col-md-2
      .form-group
        = f.label :samospas
        = f.check_box :samospas, class: 'form-control'
  .row
    .col-md-8
      .form-group
        = f.label :note
        = f.text_area :note, class: 'form-control'
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
