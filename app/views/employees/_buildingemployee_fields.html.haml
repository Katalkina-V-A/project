.nested-fields
  .panel.panel-default
    .panel-body
      .row
        =f.hidden_field :id
        .col-md-12
          .form-group
            =f.label :building_id
            =f.select :building_id, options_for_select(Building.all.map{|b| [b.name, b.id]}),{},
              title: "Ничего не выбрано", class: 'form-control selectpicker',
              value: ((tmp = params.try('[]', :employee).try('[]', :buildingemployee).try('[]', :building_id)).nil? ? f.object.building_id : tmp)
      .row
        .col-md-8
          .form-group
            =f.label :post
            =f.text_field :post, class: 'form-control'
        .col-md-4
          .form-group
            =f.label :cabinet
            =f.text_field :cabinet, class: 'form-control'
      .row
        .col-md-4
          .form-group
            =f.label :startwork
            .input-group.date.timepicker
              =f.text_field :startwork, class: 'form-control'
              -# , data: {value: (l(@employee.buildingemployees.startwork) if @employee.buildingemployees.startwork)}
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
        .col-md-4
          .form-group
            =f.label :endwork
            .input-group.date.timepicker
              = f.text_field :endwork, class: 'form-control'
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
        .col-md-4
          .form-group
            =f.label :phone
            =f.text_field :phone, class: 'form-control', data: {masked: 'phone'}
      .row
        .col-md-12
          .form-group
            =f.label :note
            =f.text_area :note, class: 'form-control'
      .form-group
        =link_to_remove_association "Удалить", f, class: 'btn btn-danger'
