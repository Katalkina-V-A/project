      -#     = select_tag 'set_locale', options_for_select(User::LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()'
      -#     = submit_tag 'submit'
      -#     = javascript_tag "$('.locale input').hide()"
      -#   = image_tag("logo.png")

  .modal.fade#loader{tabindex: -1, role: 'dialog', 'aria-labelledby' => 'myModalLabel'}
